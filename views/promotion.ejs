
<div ng-controller="promotionController" class="ui container" ng-cloak>

<div class="ui segment">
	<h2 class="ui header">
	   <i class="desktop icon"></i>
	  <div class="content">
	    PROMOCIONES
	  </div>
	</h2>
</div>
<div class="ui grid">
	<div class="two wide column">
		<div class="ui ">
			<%- partial('./menu/menu.ejs') %>    
		</div>
	</div>

<div class="fourteen wide column">	
	<div class="ui segment" ng-model="empresa">
		<div class="ui right aligned grid">
		 <div class="left floated right aligned 	 wide column">
				<h5  class="ui header">{{empresa.owner.username | uppercase }}</h5>		 	     
		 </div>
		  
		  <!--div class="right floated left aligned two wide column">
		     <button class="circular ui gray icon button" id="call-modals" ng-click="agregar()">
			  <i class="plus icon"></i>
			</button>	
		  </div-->
		  <div class="right floated left aligned two wide column">
		     <a  href="promotion/new" class="circular ui gray icon button" id="call-modals" >
			  <i class="plus icon"></i>
			</a>	
		  </div>



		</div>

		
		
		<br>
		<br>

		<!-- Cards-->
		<div class="ui four doubling cards">
		  <div class="card" ng-repeat="promociones in empresa.owner.promotions">
		    <div class="content">
		      <div class="header">
		        {{promociones.name }}
			      </div>
			      <div class="meta">
			        {{promociones.state}}
			      </div>
			      <div class="description">
			        {{promociones.description}}
			      </div>
			    </div>
			    <div class="extra content">
			      <div class="ui two buttons">
			        <div class="ui basic green button">{{promociones.start_date | date:'MM/dd/yyyy'}}</div>
			        <div class="ui basic red button">{{promociones.end_date | date:'MM/dd/yyyy'}}</div>
			      </div>
					<br>
					<br>					
					<center>	
					<div class="ui basic black button"  ng-click="show(promociones)" >Ver detalle</div>
					</center>	
				    </div>
				  </div>
				</div>
					<br>
					<br>		
			</div>
		</div>
	</div>
	


	

	<!-- Modal Deatils-->		
	<div id="detallePromocion" class="ui modal" >
			<i class="close icon"></i>
			<div class="header" ng-model="name">
				{{name | uppercase}}
			</div>
			<div class="image content" >
			
			<div class ="ui small  bordered image">
			<img  ng-model="image"  ng-src="{{image}}"/>
			</div>

				<div class="description" >
						<div class="ui header">
							Detalles
						</div >
						<br>
						<label> Descripcion</label>
						<p ng-model="details" >{{details}}</p>	
						<label> Fecha de inicio</label>		
						<p ng-model="startDate" >{{startDate | date:'MM/dd/yyyy'}}</p>		
						<label> Fecha de vencimiento</label>		
						<p ng-model="endDate" >{{endDate | date:'MM/dd/yyyy'}}</p>																
				</div>
			</div>
			<div class="actions">
				<div class="ui button">Cancel</div>
				<div class="ui button">OK</div>
			</div>
		</div>


		<div class="ui modal">
		<div class="header">Header</div>
		<div class="content">
		<p></p>
		</div>
		<div class="actions">
		<div class="ui approve button">Approve</div>
		<div class="ui button">Neutral</div>
		<div class="ui cancel button">Cancel</div>
		</div>
		</div>


		<!-- INICIO Modal Form-->		
		<div class="ui united modal" id ="modal1">		  
		  <div class="header">
		  Agrega tu promocion
		  <div style=" right: 10px; top: 16px; position: absolute;">
		  	<button   ng-disabled="!form.$valid || submited" ng-click="send(CreatePromotion)" class="ui button" type="submit">Submit</button>
		  </div>
		  </div>
		  	<br>	
		  	<div class="ui container ">
		  	<!--div class="scrolling content" -->
			  	<form class="ui form"  name ="form" ng-model="CreatePromotion"  >

			  	<div class="field">
				  	<label>Datos generales</label>
				  	<div class="">
						  	<div class="field">
							    <label>Nombre</label>
							    <input ng-model="CreatePromotion.name" type="text" name="first-name" placeholder="Nombre" required>
							</div>

							<div class="field">
							    <label>Descripcion</label>
			    				<textarea ng-model="CreatePromotion.description" rows="2" required></textarea>
							</div>
			  		</div>
			  	</div>



			  	<div class="field">
			  		<label>Contenido</label>
			  		<div class="ancho_3_elementos">
				  		<div class="field" style="border: none;">
					    	<label>Imagen</label>
					    	<input  type="file" ngf-select ng-model="CreatePromotion.image"  name="file" required>
					  	</div>

					 	<div class="field" style="border: none;">
					    	<label>Asset</label>
					    	<input  type="file" ngf-select ng-model="CreatePromotion.asset"  name="file2"  required>
					   </div>

					   	<div class="fiel">
					  		<label>Video</label>
					  		<input  type="file" ngf-select ng-model="CreatePromotion.asset"  name="file2"  required>
					  	</div>
			  		</div>
			  	</div>
				  

				   <div class="field">
				   		<label>Contacto y enlaces externos</label>
					
						<div class=" field " style="height: 250px;width: 250px">
						      <ui-gmap-google-map center="map.center" zoom="map.zoom" draggable="true" options="options">
							    <ui-gmap-marker coords="marker.coords" options="marker.options" events="marker.events" idkey="marker.id">
							    </ui-gmap-marker>
							  </ui-gmap-google-map>
						</div>


						<div class="ancho_2_elementos">
							<div class=" field ui labeled icon input" >
							      <div class="ui label" style="width: 49% ">facebook.com/</div>
							      <input type="text" style="width: 49% " placeholder="promoar">
							</div>

					   		<div class=" field ui labeled icon input" >
							      <div class="ui label" style="width: 49% " >twitter.com/</div>
							      <input type="text" style="width: 49% " placeholder="Leonardo_Oliva">
							</div>
						</div>

						<div class="ancho_2_elementos">
							<div class=" field ui labeled icon input" >
							      <div class="ui label" style="width: 49% ">youtube.com/watch?v=</div>
							      <input type="text" style="width: 49% " placeholder="DPAL7DHwN9Q">
							</div>

							<div class=" field ui labeled icon input">
							      <div class="ui label" style="width: 49% ">instagram.com/</div>
							      <input type="text" style="width: 49% " placeholder="lolivamonjaras">
							</div>
						</div>
							

						<div class=" field ui labeled icon input">
						      <div class="ui label">http://</div>
						      <input type="text" placeholder="www.projec.lom.dynu.com">
						</div>

				   </div>
				  


				  <div class="field">
				  	<label>Vigencia</label>

				  		<div class="ancho_2_elementos" >
					  		<div class="field">
							    <label>Fecha de Inicio</label>
							    <input ng-model="CreatePromotion.start_date" type="date" >
							    <!--p ng-bind="CreatePromotion.start_date"></p-->
							</div>

							<div class="field">
							    <label>Fecha de vencimiento</label>
							    <input  ng-model="CreatePromotion.end_date"  type="date" required>
							</div>	
					  	</div>
				  </div>

				


				  
				  
				  <br>
				  <br>
					<!-- <button class="ui labeled icon button" ng-disabled="!submited"   id="btn-modal-1">Siguiente<i class="arrow sign right icon"></i></button> -->
				</form>
			</div>
		</div>
		<!-- FIN Modal Form-->		



</div>